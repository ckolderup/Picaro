#header-right
  - if logged_in?
    %ul
      %li
        %a{:href => "/account"}
          = "#{current_user.display_name}"
      %li
        %a{:href => "/logout"} Logout
  - else
    %ul
      %li
        %a{:href => "#{ENV['SECURE_SITE_ROOT']}/signup"} Signup
      %li
        %a{:href => "#{ENV['SECURE_SITE_ROOT']}/login"} Login