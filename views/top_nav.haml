#header-logo
  %h1
    %a{:href => "/"} Picaro
#header-left
  - if logged_in?
    %ul
      %li
        %a{:href => "/editor/new"} New
      %li
        %a{:href => "/games"} Games
      %li
        %a{:href => "/docs"} Docs
  - else
    %ul
      %li
