.title
  %a{:href => game.play_url}
    %span
      = game.versions.last.title
    %small
      by
      = game.author.display_name

.description
  = game.versions.last.description
  - if game.author == current_user
    %a{:href => game.edit_url}
      &nbsp;Edit
      %a{:href => game.publish_url}
        &middot;&nbsp;
        - if not game.published?
          Publish
        - else
          Unpublish

    %form{:action => game.edit_url, :method => 'POST', :class => 'delete-game'}
      &middot;&nbsp;
      %input{:type => "hidden", :name  => "_method", :value => "delete"}
      %a{:href => "#", :class => 'delete-game'}
        Delete
